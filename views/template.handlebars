<form class='template-form'>
  <div class='mx-6'>
    {{! day select }}
    <label>Day:</label>
    <select id='workout-day'>
      <option>Sunday</option>
      <option>Monday</option>
      <option>Tuesday</option>
      <option>Wednesday</option>
      <option>Thursday</option>
      <option>Friday</option>
      <option>Saturday</option>
    </select>
    {{! category select }}
    <label>Category:</label>
    <select id='workout-category'>
      <option>Arms</option>
      <option>Chest</option>
      <option>Legs</option>
      <option>Back</option>
      <option>Dynamic Lifts</option>
      <option>Shoulders</option>
      <option>Core and Abs</option>
    </select>
  </div>
  <div class='columns mt-1'>
    <div class='column is-one-third mx-6'>
      <input
        class='input'
        id='workout-name'
        type='text'
        placeholder='Workout'
      />
    </div>
    <div class='column mx-6'>
      <input class='input' id='workout-sets' type='text' placeholder='Sets' />
    </div>
    <div class='column mx-6'>
      <input class='input' id='workout-reps' type='text' placeholder='Reps' />
    </div>
  </div>
  <div class='mx-6'>
    <textarea
      class='textarea'
      id='workout-notes'
      placeholder='Enter in your Workout Notes!'
    ></textarea>
  </div>

  <div class='is-flex is-justify-content-center'>
    <button
      class='button is-rounded is-success mt-5'
      id='submit-template'
      type='submit'
    >
      Submit
    </button>
  </div>
</form>

<script src='./js/template.js'></script>