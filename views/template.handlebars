    >
      <label class='has-text-light'>Shoulders</label>
      <select multiple size='4'>
        {{#each shoulderWorkouts as |shoulderWorkout|}}
          <option
            value='{{shoulderWorkout.id}}'
          >{{shoulderWorkout.name}}</option>
        {{/each}}
      </select>
      <div class='field'>
        <p class='control'>
          <button
            class='button is-rounded is-success mt-5 has-text-centered'
            id='login'
            type='submit'
          >
