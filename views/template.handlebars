<form class='template-form'>
  {{! Template Name }}
  <div class='field'>
    <p class='control'>
      <input
        class='input is-rounded has-background-is-success-light'
        type='text'
        id='template-name'
        placeholder='Template Name'
      />
    </p>
  </div>
  {{! Multi-Select }}
  <div class='columns is-three-quarters-mobile is-multiline is-mobile'>
    <div class='column select is-multiple has-text-centered'>
      <label class='has-text-light'>Arms</label>
      <select class='workout-select' multiple size='4'>
        {{#each armWorkouts as |armWorkout|}}
          <option value='{{armWorkout.id}}'>{{armWorkout.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class='column select is-multiple has-text-centered'>
      <label class='has-text-light'>Back</label>
      <select class='workout-select' multiple size='4'>
        {{#each backWorkouts as |backWorkout|}}
          <option value='{{backWorkout.id}}'>{{backWorkout.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class='column select is-multiple column has-text-centered'>
      <label class='has-text-light'>Chest</label>
      <select class='workout-select' multiple size='4'>
        {{#each chestWorkouts as |chestWorkout|}}
          <option value='{{chestWorkout.id}}'>{{chestWorkout.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class='column select is-multiple column has-text-centered'>
      <label class='has-text-light'>Core and Abs</label>
      <select class='workout-select' multiple size='4'>
        {{#each coreWorkouts as |coreWorkout|}}
          <option value='{{coreWorkout.id}}'>{{coreWorkout.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class='column select is-multiple column has-text-centered'>
      <label class='has-text-light'>Dynamic Lifts</label>
      <select class='workout-select' multiple size='4'>
        {{#each dynamicWorkouts as |dynamicWorkout|}}
          <option value='{{dynamicWorkout.id}}'>{{dynamicWorkout.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class='column select is-multiple column has-text-centered'>
      <label class='has-text-light'>Legs</label>
      <select class='workout-select' multiple size='4'>
        {{#each legWorkouts as |legWorkout|}}
          <option value='{{legWorkout.id}}'>{{legWorkout.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class='column select is-multiple column has-text-centered'>
      <label class='has-text-light'>Shoulders</label>
      <select class='workout-select' multiple size='4'>
        {{#each shoulderWorkouts as |shoulderWorkout|}}
          <option
            value='{{shoulderWorkout.id}}'
          >{{shoulderWorkout.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class='column select is-multiple column has-text-centered'>
      <label class='has-text-light'>Day</label>
      <select class='workout-select' multiple size='4'>

        <option>
          Sunday
        </option>
        <option>
          Monday
        </option>
        <option>
          Tuesday
        </option>
        <option>
          Wednesday
        </option>
        <option>
          Thursday
        </option>
        <option>
          Friday
        </option>
        <option>
          Saturday
        </option>
      </select>
    </div>
  </div>
  {{! button }}
  <div class='is-flex is-justify-content-center'>
    <button class='button is-rounded is-success mt-5' id='login' type='submit'>
      Submit
    </button>
  </div>
</form>

<script src='./js/template.js'></script>