<div class='column is-12-mobile is-3-tablet is-3-desktop'>
  <div class='card has-background-success' id='{{id}}'>
    <div class='card-content small-card has-text-light'>
      <h2 class='has-text-centered mb-3'>{{day_of_week}}</h2>
      <p>{{name}}</p>
    </div>
    <footer class='card-footer'>
      <a
        href='/entry/{{id}}'
        class='has-text-light has-text-centered'
        id='track-{{id}}'
      >Track</a>
    </footer>
  </div>
</div>